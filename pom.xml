    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.4.199</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <modules>
    <module>ebean</module>
    <module>ebean-api</module>
    <module>ebean-bom</module>
    <module>ebean-core-type</module>
    <module>ebean-core</module>
